    "@types/restify": "7.2.12",
    "@types/styled-components": "4.1.18",
    "concurrently": "4.1.1",
    "cross-env": "5.2.0",
    "electron": "5.0.7",
    "electron-builder": "21.1.1",
    "fuse-box": "3.7.1",
    "prettier": "1.18.2",
    "terser": "4.4.0",
    "tslint": "5.18.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.3",
    "typescript-plugin-styled-components": "1.4.3"
  },
  "dependencies": {
    "@cliqz/adblocker": "0.11.0",
